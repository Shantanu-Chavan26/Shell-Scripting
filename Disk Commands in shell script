#Provides all the disk info and in the form of various columns
df - h 
#In order to print specific column we use the awk command 
ubuntu@ip-172-31-47-8:~/Shan/projects$ df -H | awk '{print $1}' | while read output
> do
> echo "Disk Status: $output"
> done
